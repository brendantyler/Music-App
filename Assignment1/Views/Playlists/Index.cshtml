@model IEnumerable<Assignment1.Models.Playlist>

@{
    ViewData["Title"] = "Index";
}

<h1>Playlists</h1>

<p>
    <a asp-action="Create">Create New Playlist</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Playlist @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-controller="songs" asp-action="Index" >Add Songs</a> |
                    <a asp-controller="PlaylistSongs" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
